@using ElasticaClients.DAL.Accessory;

@model List<ElasticaClients.DAL.Entities.Subscription>

<select id="subs" name="SubscriptionId" class="form-control">
	<option value="0">---</option>
	@foreach (var item in Model.OrderBy(x => x.StatusId))
	{
		<option value="@item.Id">@($"На {item.TrainingCount} занятий. {item.StatusName}. Осталось {item.TrainingsLeft}")</option>
	}
</select>