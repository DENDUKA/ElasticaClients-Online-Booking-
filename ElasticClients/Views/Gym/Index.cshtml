@model ElasticaClients.Models.BranchModel

@{
	ViewBag.Title = "Index";
}

<h2></h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th></th>
		<th></th>
	</tr>

	@foreach (var item in Model.)
	{
		<tr>
			<td>
				@Html.ActionLink(item.Name, "Details", new { id = item.Id })
			</td>
			<td>
				@Html.ActionLink("Тренировки", "Index", "Training", new { GymId = item.Id }, new { })
			</td>
		</tr>
	}
</table>

<h3>Залы</h3>

<div class="row">
	@foreach (var item in Model.Gyms)
	{
		<div class="col-md-4 navpanel">
			<button type="button" class="btn mb-2 mb-md-0 btn-info btn-block h-100"
					onclick="location.href='@Url.Action("Index", "Training", new { GymId = item.Id })'">
				@item.Name
			</button>
		</div>
	}
</div>

