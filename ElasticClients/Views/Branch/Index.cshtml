@model IEnumerable<ElasticaClients.Models.BranchModel>

@{
	ViewBag.Title = "Index";
}

<h3>Филиалы</h3>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 navpanel">
			<button type="button" class="btn mb-2 mb-md-0 btn-info btn-block h-100"
					onclick="location.href='@Url.Action("Details", "Branch", new { Id = item.Id })'">
				@item.Name
			</button>
		</div>
	}
</div>